<div id="register-form" class="my-form p-5 rounded border border-secondary">
  <h1 class="wb-100">Register</h1>
  <form action="/register" method="POST">
    <div class="form-group">
      <label for="name">Name</label>
      <input
        type="text"
        name="name"
        class="form-control mb-4"
        id="name"
        placeholder="Name"
      />
    </div>
    <%- include('_form_fields') %>
    <div class="form-group">
      <label for="password2">Confirm Password</label>
      <input
        type="password"
        name="password2"
        class="form-control"
        id="password2"
        placeholder="Confirm Password"
        required
      />
    </div>
    <button type="submit" class="btn btn-primary">Sign Up</button>
    <p class="pt-2">
      Already have an account?
      <a href="/login" class="btn btn-sm btn-success">Sign In</a>
    </p>
  </form>
</div>
